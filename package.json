{
  "name": "alexbednov-phone-select",
  "version": "0.1.0",
  "description": "Vue component for phone number selection with country codes",
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist",
    "src/json/countries.json"
  ],
  "scripts": {
    "build": "vite build && tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "vite",
    "test": "vitest",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "keywords": [
    "vue",
    "phone",
    "country",
    "code",
    "select"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.2.0",
    "vue": "^3.3.0",
    "vue-tsc": "^1.8.27",
    "@tailwindcss/vite": "^4.1.3",
    "tailwindcss": "^4.1.3"
  },
  "dependencies": {
    "vue-i18n": "10"
  }
}
